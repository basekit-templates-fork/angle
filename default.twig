{% extends "layout.twig" %}

{% block content %}

<div class="bk-pt-default">


<div class="left">
        <header>
            {{widget('logo', 'sidelogo', {"defaultlogo": asset('images/logo.png')})|raw}}
            {{widget('companyname', 'sidecompanyname', {"business": "profile"})|raw}}
        </header>
        <div class="vertical-nav">
            {{widget('extendednavigation', 'sidenavigation', {})|raw}}
        </div>
</div>



<div class="top-nav wrapper clearfix">
    <header>
        <div class="companyheader clearfix">
            {{widget('logo', 'toplogo', {"defaultlogo": asset('images/logo.png')})|raw}}
            {{widget('companyname', 'topcompanyname', {"business": "profile"})|raw}}
        </div>
    </header>
        {{widget('extendednavigation', 'topnavigation', {})|raw}}
</div>



<div class="right">

    <div class="main wrapper clearfix">
            {{zone('main')|raw}}
    </div>  

</div>

<footer>
    <div class="wrapper clearfix">       
            {{widget('profile', 'footercolumn1profileEmail', { 'profileType':'email', 'email':'profile'})|raw}}
            {{widget('profile', 'footercolumn1profilePhone', { 'profileType':'phone', 'phone':'profile'})|raw}} 
    </div>
</footer>

</div>

{% endblock %}
